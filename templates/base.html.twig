<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
        {% endblock %}
    </head>
    <body class="{% block bodyClass %}with-nav{% endblock %}">
        {% block nav %}
            <nav class="navbar navbar-default navbar-fixed-top">
                <div class="container-fluid">
                    <a class="navbar-brand" href="{{ path('home') }}"><span class="glyphicon glyphicon-shopping-cart"></span> My Tiny Shop</a>
                </div>
            </nav>
        {% endblock %}

        <div class="container-fluid">
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            <script src="{{ asset('build/js/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
