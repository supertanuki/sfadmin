{% extends 'base.html.twig' %}

{% block title 'Home' %}

{% block body %}
    <h1 class="page-header">Home</h1>

    <ul>
        {% for product in products %}
            <li>
                <a href="{{ path('product_show', { product: product.id }) }}">
                    {{ product.label }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
